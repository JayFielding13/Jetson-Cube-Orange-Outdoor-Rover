<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="test_yard">

    <!-- Physics -->
    <physics type="ode">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1</real_time_factor>
      <real_time_update_rate>1000</real_time_update_rate>
    </physics>

    <!-- Lighting -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Ground plane (grass texture) -->
    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <surface>
            <friction>
              <ode>
                <mu>0.8</mu>
                <mu2>0.8</mu2>
              </ode>
            </friction>
          </surface>
        </collision>
        <visual name="visual">
          <cast_shadows>false</cast_shadows>
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <material>
            <script>
              <uri>file://media/materials/scripts/gazebo.material</uri>
              <name>Gazebo/Grass</name>
            </script>
          </material>
        </visual>
      </link>
    </model>

    <!-- Simple Maze for Obstacle Avoidance Testing -->
    <!-- Maze layout: corridors ~2.5m wide with turns and dead end -->
    <!-- Wall height: 1.0m (detectable by LiDAR) -->
    <!-- Wall thickness: 0.3m -->

    <!-- Maze outer walls (forming perimeter) -->
    <!-- North wall -->
    <model name="maze_wall_north">
      <pose>0 8 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>16.0 0.3 1.0</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>16.0 0.3 1.0</size>
            </box>
          </geometry>
          <material>
            <ambient>0.7 0.7 0.7 1</ambient>
            <diffuse>0.7 0.7 0.7 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- South wall -->
    <model name="maze_wall_south">
      <pose>0 -8 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>16.0 0.3 1.0</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>16.0 0.3 1.0</size>
            </box>
          </geometry>
          <material>
            <ambient>0.7 0.7 0.7 1</ambient>
            <diffuse>0.7 0.7 0.7 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- West wall -->
    <model name="maze_wall_west">
      <pose>-8 0 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>0.3 16.0 1.0</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>0.3 16.0 1.0</size>
            </box>
          </geometry>
          <material>
            <ambient>0.7 0.7 0.7 1</ambient>
            <diffuse>0.7 0.7 0.7 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- East wall -->
    <model name="maze_wall_east">
      <pose>8 0 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>0.3 16.0 1.0</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>0.3 16.0 1.0</size>
            </box>
          </geometry>
          <material>
            <ambient>0.7 0.7 0.7 1</ambient>
            <diffuse>0.7 0.7 0.7 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Internal maze walls creating corridors -->
    <!-- Vertical divider wall 1 (creates main corridor on left) -->
    <model name="maze_divider_1">
      <pose>-4 2 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>0.3 8.0 1.0</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>0.3 8.0 1.0</size>
            </box>
          </geometry>
          <material>
            <ambient>0.6 0.6 0.8 1</ambient>
            <diffuse>0.6 0.6 0.8 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Horizontal wall 1 (creates turn) -->
    <model name="maze_horizontal_1">
      <pose>0 0 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>8.0 0.3 1.0</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>8.0 0.3 1.0</size>
            </box>
          </geometry>
          <material>
            <ambient>0.6 0.6 0.8 1</ambient>
            <diffuse>0.6 0.6 0.8 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Vertical divider wall 2 (creates corridor on right) -->
    <model name="maze_divider_2">
      <pose>4 -2 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>0.3 8.0 1.0</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>0.3 8.0 1.0</size>
            </box>
          </geometry>
          <material>
            <ambient>0.6 0.6 0.8 1</ambient>
            <diffuse>0.6 0.6 0.8 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Dead-end wall (tests backing up behavior) -->
    <model name="maze_deadend">
      <pose>-6 6 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>4.0 0.3 1.0</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>4.0 0.3 1.0</size>
            </box>
          </geometry>
          <material>
            <ambient>0.8 0.6 0.6 1</ambient>
            <diffuse>0.8 0.6 0.6 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Obstacle in corridor (tests navigation around object in tight space) -->
    <model name="maze_obstacle_cylinder">
      <pose>2 4 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <cylinder>
              <radius>0.4</radius>
              <length>1.0</length>
            </cylinder>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.4</radius>
              <length>1.0</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.8 0.4 0.2 1</ambient>
            <diffuse>0.8 0.4 0.2 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Pavement section (different friction) -->
    <model name="pavement">
      <pose>8 0 0.01 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>10.0 5.0 0.02</size>
            </box>
          </geometry>
          <surface>
            <friction>
              <ode>
                <mu>1.0</mu>
                <mu2>1.0</mu2>
              </ode>
            </friction>
          </surface>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>10.0 5.0 0.02</size>
            </box>
          </geometry>
          <material>
            <ambient>0.3 0.3 0.3 1</ambient>
            <diffuse>0.3 0.3 0.3 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- GPS waypoint markers (visual only, for reference) -->
    <model name="waypoint_1">
      <pose>10 0 0.1 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.2</radius>
              <length>0.2</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0 1 0 0.5</ambient>
            <diffuse>0 1 0 0.5</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <model name="waypoint_2">
      <pose>10 5 0.1 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.2</radius>
              <length>0.2</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0 1 0 0.5</ambient>
            <diffuse>0 1 0 0.5</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <model name="waypoint_3">
      <pose>5 5 0.1 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.2</radius>
              <length>0.2</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0 1 0 0.5</ambient>
            <diffuse>0 1 0 0.5</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <model name="waypoint_4">
      <pose>0 0 0.1 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.2</radius>
              <length>0.2</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>1 0 0 0.5</ambient>
            <diffuse>1 0 0 0.5</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- AprilTag marker hidden in dead-end corridor -->
    <!-- Tag 0 - challenging location requiring exploration to find -->
    <!-- Bright colored marker representing AprilTag -->
    <model name="apriltag_marker">
      <pose>-5 7 0.5 -2.50618 1.39159 -0.399999</pose>  <!-- Repositioned for camera visibility -->
      <static>true</static>
      <link name="link">
        <!-- White background board -->
        <visual name="board">
          <geometry>
            <box>
              <size>0.4 0.02 0.4</size>
            </box>
          </geometry>
          <material>
            <ambient>1 1 1 1</ambient>
            <diffuse>1 1 1 1</diffuse>
          </material>
        </visual>
        <!-- Black center square (AprilTag pattern) -->
        <visual name="pattern">
          <pose>0 -0.015 0 0 0 0</pose>
          <geometry>
            <box>
              <size>0.25 0.01 0.25</size>
            </box>
          </geometry>
          <material>
            <ambient>0 0 0 1</ambient>
            <diffuse>0 0 0 1</diffuse>
          </material>
        </visual>
        <!-- Bright green indicator (easy to spot in camera) -->
        <visual name="indicator">
          <pose>0 -0.02 0 0 0 0</pose>
          <geometry>
            <box>
              <size>0.1 0.005 0.1</size>
            </box>
          </geometry>
          <material>
            <ambient>0 1 0 1</ambient>
            <diffuse>0 1 0 1</diffuse>
            <emissive>0 0.5 0 1</emissive>
          </material>
        </visual>
      </link>
    </model>

    <!-- Geofence boundary markers (for testing geofence logic) -->
    <model name="geofence_corner_ne">
      <pose>15 10 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <visual name="visual">
          <geometry>
            <sphere>
              <radius>0.3</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>1 1 0 0.7</ambient>
            <diffuse>1 1 0 0.7</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <model name="geofence_corner_nw">
      <pose>-15 10 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <visual name="visual">
          <geometry>
            <sphere>
              <radius>0.3</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>1 1 0 0.7</ambient>
            <diffuse>1 1 0 0.7</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <model name="geofence_corner_se">
      <pose>15 -10 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <visual name="visual">
          <geometry>
            <sphere>
